    <!--</style>-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="courseTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/pluralSight_orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="noteTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/grey</item>
    </style>
    
    <style name="AddFab" parent="@style/Widget.Design.FloatingActionButton">
        <item name="srcCompat">@drawable/ic_add_circle_black_24dp</item>
        <item name="android:tint">@android:color/white</item>
    </style>

</resources>
